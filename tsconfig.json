{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "lib": ["dom", "es2017"],
      "allowJs": true,
      "jsx": "react",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "resolveJsonModule": true,
      "baseUrl": "./src"
    },
    "include": ["src"]
  }
  